<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_lightgray"
    android:padding="5dp"
    android:weightSum="10">
    <TextView
        android:id="@+id/sequence"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="5sp"
        android:layout_weight="9.25"
        android:gravity="center_vertical"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/childItem"
        android:layout_width="305dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/sequence"
        android:gravity="center_vertical"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/fotozoom"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/fotozoom"
        android:layout_marginLeft="5dp" />
    <ImageView
        android:id="@+id/fotodel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/fotodel"
        android:layout_marginLeft="5dp">
    </ImageView>
</LinearLayout>
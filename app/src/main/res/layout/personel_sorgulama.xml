<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutPS"
    android:orientation="vertical">
    <!-- Header aligned to top -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/web20c1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/personelSorgulama"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/sorgula"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgAddPerson"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@color/web20c1"
                    android:padding="2dp"
                    android:src="@drawable/useradd2"
                    android:visibility="gone" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/pskartno" />

                <EditText
                    android:id="@+id/psKartno"
                    android:layout_width="135dp"
                    android:layout_height="40dp"
                    android:numeric="decimal"
                    android:singleLine="true"
                    android:textSize="15dp"></EditText>

                <ImageView
                    android:id="@+id/imgChangeKartno"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp"
                    android:src="@drawable/change" />

                <ImageView
                    android:id="@+id/imgCancelKartno"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:padding="1dp"
                    android:src="@drawable/cancelcard"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/psbarkod" />

                <EditText
                    android:id="@+id/psbarkod"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:numeric="decimal"
                    android:singleLine="true"
                    android:textSize="15dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/pstc" />

                <EditText
                    android:id="@+id/pstc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:numeric="decimal"
                    android:singleLine="true"
                    android:textSize="15dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/psad" />

                <EditText
                    android:id="@+id/psad"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:textSize="15dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/pssoyad" />

                <EditText
                    android:id="@+id/pssoyad"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:textSize="15dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/psbarkodyeni"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/psbarkodyeni"
                    android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/psbarkodoku"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/psbarkodoku"
                    android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/ibasGorevEkle"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/ibasekle"
                    android:textStyle="bold"
                    android:visibility="gone"></Button>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutPSFoto"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/border_personelsorgulama"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/psFoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPSFotoEmpty"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/border_personelsorgulama"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/addFoto"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/addphoto"
                    android:layout_margin="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/psdogumtarihi" />

                <TextView
                    android:id="@+id/psdogumtarihi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/pscinsiyet" />

                <TextView
                    android:id="@+id/pscinsiyet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/psgorev" />

                <TextView
                    android:id="@+id/psgorev"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/psbolge" />

                <TextView
                    android:id="@+id/psbolge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="15dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/pssgkevrak" />

                <TextView
                    android:id="@+id/pssgkevrak"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/bg_tab_text_color"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/psbolge2" />

                <TextView
                    android:id="@+id/psbolge2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/psbolge3" />

                <TextView
                    android:id="@+id/psbolge3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/psbolge4" />

                <TextView
                    android:id="@+id/psbolge4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/psbolge5" />

                <TextView
                    android:id="@+id/psbolge5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/psekiplideri" />

                <TextView
                    android:id="@+id/psekiplideri"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/psekiplideri2" />

                <TextView
                    android:id="@+id/psekiplideri2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/psekiplideri3" />

                <TextView
                    android:id="@+id/psekiplideri3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/pssskdurumu" />

                <TextView
                    android:id="@+id/pssskdurumu"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"></TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutPSNufusFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_personelsorgulama"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/psnufusbilgisi"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/nufusFoto1"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/addnufus"
                        android:layout_margin="5dp" />
                    <ImageView
                        android:id="@+id/nufusFoto2"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/addnufus"
                        android:layout_margin="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    >
                    <Button
                        android:id="@+id/psNufusIptalet"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="@string/psnufusbilgisiiptalet"/>
                    <Button
                        android:id="@+id/psNufusKaydet"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="@string/psnufusbilgisikaydet"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>